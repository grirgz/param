(
// arbitrary param group mapping
MKtl(\icon)[\kn].mapParam([
	Param( Pdef(\bete), \degree -> \stepseq -> 2 ), // assign first knob to step 2 of the degree Pseq
	Param( Pdef(\bete), \rq -> \stepseq -> 1 ),
